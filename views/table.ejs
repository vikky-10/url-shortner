<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" referrerpolicy="no-referrer" />

    <title>ðŸ”—Shortly</title>
</head>
<body>
  <nav>
    <h1><a href="/">Shortly</a></h1>

    <ul>
         <% if(locals.user){%>
        <li  class="login"></li>Welcome, <%= user.email%></li>
        <%}%>
      <li class="login"><a href="/">Home</a></li>
      <li><a href="/logout" class="btn">Log out</a></li>
      
    </ul>
  </nav>

  
  <div id="searchWrapper">
    <form id="search" action="/search" method="POST">
    <input
      type="text"
      name="url"
      id="searchBar"
      placeholder="Search using short or full url..."
      required
    />
    <input class="sub" type="submit" name="submit" value="submit">
  </form>
  </div>

    <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks <i class="fas fa-mouse"></i></th>
          </tr>
        </thead>
         
          <% if (locals.data==null) {%>
            <tbody>
              <% shortUrls.forEach(shortUrl => { %>
                <tr>
                  <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                  <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                  <td><%= shortUrl.clicks %></td>
                </tr>
              <% }) %>
            </tbody>
          

<% } else{%> 
       <tbody>
          <% data.forEach(shortUrl => { %>
            <tr>
              <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
              <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
              <td><%= shortUrl.clicks %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <%}%>
      </table>
      
      <%- include('partials/footer'); -%>
       
</body>
</html>